@page
@model HotelWebApplication.Pages.FilterByCityModel


@{
    ViewData["Title"] = "شهر های ";
}

<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        شهر ها
    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">خانه</a>
        </li>
        <li class="breadcrumb-item active">شهر ها</li>
    </ol>


    <div class="row">

        @for (int i = 0; i < @Model.ListCity.Result.Count; i++)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card">
                    <p class="card-header" style="text-align: center">
                        @Model.ListCity.Result[i].CityName
                        <br />
                        تعداد هتل ها :
                        @Model.ListCity.Result[i].Hotels.Count
                    </p>

                    <div class="card-body">
                        <a href="#">
                            <img class="img-fluid" src="http://placehold.it/500x300" alt="">
                        </a>

                    </div>
                </div>

            </div>
        }

    </div>
</div>