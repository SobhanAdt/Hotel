@page
@model HotelWebApplication.Pages.HotelDetailModel
@{
    ViewData["Title"] = "توضیحات هتل";
}

<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        توضیحات هتل
    </h1>

    <ol class="breadcrumb alert alert-info">
        <li class="breadcrumb-item">
            <a href="/">خانه</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Collection">کالکشن</a>
        </li>
        <li class="breadcrumb-item active">@Model.hotel.HotelName</li>
    </ol>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="/Image/overview-photo-image.jpg" alt="">
            <partial name="_Comment" />
        </div>

        <div class="col-md-4">
            <h3 class="my-3">توضیحات هتل</h3>
            <p>
                @Model.hotel.Description
            </p>
            <h3 class="my-3">جزئیات هتل</h3>
            <ul>
                <li>
                    امتیاز :
                    @Model.hotel.Rate
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-wink" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path d="M4.285 9.567a.5.5 0 0 1 .683.183A3.498 3.498 0 0 0 8 11.5a3.498 3.498 0 0 0 3.032-1.75.5.5 0 1 1 .866.5A4.498 4.498 0 0 1 8 12.5a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .183-.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm1.757-.437a.5.5 0 0 1 .68.194.934.934 0 0 0 .813.493c.339 0 .645-.19.813-.493a.5.5 0 1 1 .874.486A1.934 1.934 0 0 1 10.25 7.75c-.73 0-1.356-.412-1.687-1.007a.5.5 0 0 1 .194-.68z" />
                    </svg>
                </li>
                <li>
                    تعداد اتاق :
                    @Model.hotel.RoomCount
                </li>
                <li>
                    @Model.hotel.StarId ستاره
                </li>
            </ul>
        </div>

    </div>

    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">برترین هتل ها</h3>

    <div class="row">


        @foreach (var item in @Model.TopHotel)
        {<div class="col-md-2 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="/Image/overview-photo-image.jpg" alt="">
                    <a asp-page="/Hotel/HotelDetail" asp-route-id="@item.Id">
                        <p>@item.HotelName</p>
                    </a>
                </a>
            </div>
        }


    </div>
    <!-- /.row -->

</div>