@page
@model HotelWebApplication.Pages.City.ListHotelCityModel
@{
    ViewData["Title"] = @Model.CityHotel.CityName;
}


<div class="container">

    <h1 class="mt-4 mb-3">
        @Model.CityHotel.CityName
    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">خانه</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/City/FilterByCity">فیلتر شهر ها</a>
        </li>
        <li class="breadcrumb-item active">@Model.CityHotel.CityName</li>
    </ol>

    <h2> لیست هتل های @Model.CityHotel.CityName</h2>

    <div class="row">
        @{
            var modelItem = Model.CityHotel.Hotels;
        }
        @foreach (var item in modelItem)
        {
            <div class="col-lg-3 col-sm-4 mb-4">
                <div class="card">
                    <p class="card-header" style="text-align: center">
                        @item.HotelName
                    </p>

                    <div class="card-body">
                        <a asp-page="/Hotel/HotelDetail" asp-route-id="@item.Id">
                            <img class="img-fluid" src="http://placehold.it/500x300" alt="">
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>


</div>