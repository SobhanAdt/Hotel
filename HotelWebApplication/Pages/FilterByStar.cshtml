@page
@model HotelWebApplication.Pages.FilterByStarModel
@{
    ViewData["Title"] = "ستاره";
}
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        شهر ها
    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">خانه</a>
        </li>
        <li class="breadcrumb-item active">ستاره</li>
    </ol>


    <div class="row">

        @for (int i = 0; i < @Model.ListStar.Result.Count; i++)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card">
                    <p class="card-header" style="text-align: center">
                        @Model.ListStar.Result[i].StarNumber
                        <br />
                        تعداد هتل ها :
                        @Model.ListStar.Result[i].Hotels.Count
                    </p>

                    <div class="card-body">
                        <a href="#">
                            <img class="img-fluid" src="http://placehold.it/500x300" alt="">
                        </a>

                    </div>
                </div>

            </div>
        }

    </div>
</div>
